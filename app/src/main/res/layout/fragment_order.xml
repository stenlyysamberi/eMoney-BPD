<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.OrderFragment">

    <TextView
        android:textStyle="bold"
        android:drawablePadding="12dp"
        android:id="@+id/thely"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
        android:drawableTint="@color/purple_700"
        android:padding="12dp"
        android:text="Alamat favorit"
        android:textColor="@color/purple_700"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_below="@+id/thely"
        android:layout_margin="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/location"
            android:layout_width="300dp"
            android:layout_height="200dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:text="Tambahakan alamat favoritmu, yuk!"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/dark"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Nyari alamat yang sering kamupakai cuma \n dengan satu klik aja!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</RelativeLayout>