<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="1dp"
        android:layout_width="200dp"
        android:layout_height="150dp">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:id="@+id/img_venue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wisata"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:padding="12dp"
                android:background="@color/transparant_black"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nama_venue"
                    android:text="Lukas Enembe Stadium"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/alamat_venue"
                    android:textSize="10dp"
                    android:text="Jl. Sentani - Abepura, Kam. Harapan"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>