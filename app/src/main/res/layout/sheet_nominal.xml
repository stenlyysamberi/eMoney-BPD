<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/sheet_nominal"
    android:background="@drawable/bg_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:layout_centerHorizontal="true"
            android:background="@color/dark"
            android:layout_width="30dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/text_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Masukkan jumlah top up"
            android:textColor="@color/purple_700"
            android:textSize="15dp" />


        <EditText
            android:lines="1"
            android:id="@+id/jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_header"
            android:layout_marginTop="12dp"
            android:hint="Rp0"
            android:editable="true"
            android:background="@color/transparant"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/dark"
            android:textSize="30dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/strepp"
            android:layout_below="@+id/jumlah"
            android:layout_centerHorizontal="true"
            android:background="@color/dark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_below="@id/strepp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/satu"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/dua"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tiga"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/empat"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/lima"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/enam"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tujuh"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/delapan"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/sembilan"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/kosong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/purple_700"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:text="000"
                    android:textColor="@color/purple_700"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
                    android:drawableTint="@color/purple_700"
                    android:text=""
                    android:textColor="@color/purple_700"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_nominal_lanjut"
                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/purple_700"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:text="Lanjut"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </RelativeLayout>
</LinearLayout>