<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AkunFragment">

    <TextView
        android:id="@+id/thely"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
        android:drawablePadding="12dp"
        android:drawableTint="@color/purple_700"
        android:padding="12dp"
        android:text="Profilku"
        android:textColor="@color/purple_700"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/thely"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wisata" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stenly Samberi"
                        android:textColor="@color/purple_700"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+6281224452338"
                        android:textColor="@color/purple_700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="stenly.samberi@outlook.co.id"
                        android:textColor="@color/purple_700" />

                </LinearLayout>

                <TextView
                    android:id="@+id/editProfil"
                    android:layout_margin="20dp"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:drawableTint="@color/purple_700"
                    android:drawableRight="@drawable/ic_baseline_mode_edit_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginBottom="20dp"
                android:background="@color/white_Dark"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akun"
                    android:textColor="@color/dark"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pesanan_saya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/icon_order"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Pesanan"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tampil_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/ic_baseline_document_scanner_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Tampilkan QR Code"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/ic_bahasa"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Pilih Bahasa"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_smart_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:drawableLeft="@drawable/scan_biomatrik"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/purple_700"
                        android:text="Smart login"
                        android:textColor="@color/purple_700"
                        android:textSize="15dp" />

                    <Switch
                        android:id="@+id/biometrik_aktiv"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>





                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/ic_baseline_help_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Bantuan dan Laporan Saya "
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/tersimpan"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Disimpan"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Info lainnya"
                    android:textColor="@color/dark"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/kebijakan_dan_privasi"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Kebijakan Privasi"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/ketentuan_layanana"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Ketentuan Layanan"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/ic_baseline_favorite_24"
                    android:drawableRight="@drawable/arrow_kanan"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Beri rating"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/ic_baseline_logout_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/purple_700"
                    android:text="Keluar"
                    android:textColor="@color/purple_700"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>