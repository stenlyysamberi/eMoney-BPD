<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activity.Konfirmasi_Top_Up_Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:drawablePadding="12dp"
            android:id="@+id/thely"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
            android:drawableTint="@color/purple_700"
            android:padding="12dp"
            android:text="Konfirmasi top up"
            android:textColor="@color/purple_700"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12dp"
                android:textColor="@color/dark"
                android:text="Jumlah top up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Rp8.000"
                android:textColor="@color/purple_700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="12dp"
                android:background="@color/white_Dark"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

           <LinearLayout
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView

                   android:textSize="12dp"
                   android:textColor="@color/purple_700"
                   android:text="Jumlah top up ke"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:textColor="@color/purple_700"
                   android:layout_marginLeft="5dp"
                   android:textStyle="bold"
                   android:text="jekpay"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>


            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/purple_700"
                android:layout_marginTop="30dp"
                android:text="Rincian top up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/dark"
                    android:text="Jumlah top up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textColor="@color/dark"
                    android:text="Rp.8000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:textColor="@color/dark"
                android:layout_marginTop="12dp"
                android:text="Biaya top up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="12dp"
                android:background="@color/white_Dark"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:text="Total"
                   android:textColor="@color/dark"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:gravity="right"
                   android:textStyle="bold"
                   android:textColor="@color/purple_700"
                   android:text="Rp8.000"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/purple_700"
        app:cardCornerRadius="20dp">

       <LinearLayout
           android:gravity="center_vertical"
           android:padding="12dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:padding="3dp"
               android:textSize="15dp"
               android:gravity="left|center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:text="Konfirmasi top up"
               android:textColor="@color/white"
               android:textStyle="bold" />

           <TextView
               android:padding="1dp"
               android:drawableTint="@color/white"
               android:drawableRight="@drawable/back_arrow"
               android:gravity="right|center_vertical"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:text="Rp8.000"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>