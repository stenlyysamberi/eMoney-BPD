<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <include
        android:id="@+id/toolbar_hide"
        layout="@layout/toolbar_home"/>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/toolbar_hide"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


  <ScrollView
            android:id="@+id/home_scroolView"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<!--                <TextView-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/purple_700"-->
<!--                    android:textSize="30dp"-->
<!--                    android:layout_marginBottom="15dp"-->
<!--                    android:text="Welcome back!"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"/>-->

                <androidx.cardview.widget.CardView

                    android:layout_margin="1dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/purple_700"
                        android:drawableTint="@color/purple_700"
                        android:drawableRight="@drawable/icon_cari"
                        android:padding="12dp"
                        android:text="Search..."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/purple_700"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:drawableTint="@color/white"
                    android:drawableRight="@drawable/icon_more"
                    android:textStyle="bold"
                    android:id="@+id/saldo"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:text="Rp.10.000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/white"
                    android:text="you have a money today"
                    android:layout_below="@+id/saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="12dp"
                        android:drawableTint="@color/white"
                        android:drawableRight="@drawable/icon_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:padding="12dp"
                        android:drawableTint="@color/white"
                        android:drawableRight="@drawable/icon_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:padding="12dp"
                        android:text="1996"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:src="@drawable/icon_bank"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_marginTop="12dp"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_marginRight="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/isi_saldo"
                    android:layout_margin="1dp"
                    app:cardBackgroundColor="@color/orange"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/login_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@drawable/icon_add"
                            android:drawablePadding="12dp"
                            android:drawableTint="@color/purple_700"
                            android:padding="10dp"
                            android:text="Isi Saldo"
                            android:textColor="@color/purple_700"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </FrameLayout>

            <FrameLayout
                android:layout_marginLeft="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardBackgroundColor="@color/hijau_muda"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:drawableTint="@color/purple_700"
                            android:textColor="@color/purple_700"
                            android:padding="10dp"

                            android:drawablePadding="12dp"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@drawable/icon_send"
                            android:text="Transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </FrameLayout>


        </GridLayout>

        <TextView
            android:id="@+id/venue_tx"
            android:textSize="20dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:drawableTint="@color/purple_700"
            android:drawableRight="@drawable/icon_more"
            android:text="Category Venue"
            android:textColor="@color/purple_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        <TextView
            android:textColor="@color/purple_700"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Jelajahi destinasi super prioritas yuk!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="2dp"
            android:textColor="@color/dark"
            android:text="Diskon 20% untuk smua destinasi dibawah ini\ndengan promo tiket kartu debit kamu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:orientation="horizontal"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/tourists"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/wallet"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/dompet"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/img1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/img2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:padding="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <androidx.cardview.widget.CardView
                    android:layout_margin="1dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/img4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                </androidx.cardview.widget.CardView>

            </FrameLayout>

        </GridLayout>




    </LinearLayout>
  </ScrollView>

    </LinearLayout>


</RelativeLayout>